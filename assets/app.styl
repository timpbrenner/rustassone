.full-width
  width 100%

.center-content
  display flex
  justify-content center
  align-items center

.game
  text-align center

.row
  clear both

.current-tile
  background-color #0000FF
  border 4px solid #0000FF
  bottom 5px
  height 150px
  position absolute
  right 5px
  width 150px

.draw-button
  background-color #00FF00
  bottom 10px
  font-size 30px
  padding 10px
  position absolute
  right 10px

.join
  background #AAA
  bottom 10px
  padding 10px
  position absolute
  right 10px

.tile
  border 4px solid #FFF
  display inline-block
  height 100px
  margin 1px
  width 100px
  text-align center

.tile.played
  background-color #0000FF
  border 4px solid #0000FF

.tile.active
  background-color #AAA
  border 4px solid #AAA

.tile.playable-hover
  background-color #00FF00
  border 4px solid #00FF00

.tile.hover
  background-color #FF0000
  border 4px solid #FF0000

.tile.top-city, .current-tile.top-city
  border-top 4px solid red
.tile.right-city, .current-tile.right-city
  border-right 4px solid red
.tile.bottom-city, .current-tile.bottom-city
  border-bottom 4px solid red
.tile.left-city, .current-tile.left-city
  border-left 4px solid red

.tile.top-road, .current-tile.top-road
  border-top 4px solid black
.tile.right-road, .current-tile.right-road
  border-right 4px solid black
.tile.bottom-road, .current-tile.bottom-road
  border-bottom 4px solid black
.tile.left-road, .current-tile.left-road
  border-left 4px solid black

.tile.top-farm, .current-tile.top-farm
  border-top: 4px solid green
.tile.right-farm, .current-tile.right-farm
  border-right: 4px solid green
.tile.bottom-farm, .current-tile.bottom-farm
  border-bottom: 4px solid green
.tile.left-farm, .current-tile.left-farm
  border-left: 4px solid green
